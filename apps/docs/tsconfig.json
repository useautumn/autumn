{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["bun"],
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["scripts/**/*"],
  "exclude": ["node_modules", "**/*.json", "**/*.yml", "**/*.yaml", "**/*.mdx", "**/*.md"]
}
