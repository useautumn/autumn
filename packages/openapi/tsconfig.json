{
	"compilerOptions": {
		"strict": true,
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"module": "Preserve",
		"moduleResolution": "bundler",
		"target": "ES2020",
		"outDir": "./dist",
		"rootDir": ".",
		"paths": {
			"@api/*": ["../../shared/api/*"],
			"@models/*": ["../../shared/models/*"],
			"@utils/*": ["../../shared/utils/*"]
		}
	},
	"include": ["./**/*"],
	"types": ["node"],
	"exclude": ["node_modules", "dist"]
}
